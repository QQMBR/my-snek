<resources>

    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <!-- Customize your theme here. -->
        <!--
        <item name="colorSecondary">@color/colorBody</item>
        <item name="colorAccent">@color/colorHead</item>

        <item name="color">@color/colorApple</item>

        <item name="colorPrimary">@color/colorGridBackground</item>

        <item name="colorPrimaryDark">@color/colorBackground</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorApple</item>
        <item name="android:colorPrimary">@color/colorBackground</item>
        <item name="android:colorPrimaryDark">@color/colorGridBackground</item>

        <item name="android:colorAccent">@color/colorHead</item>
        -->
        <item name="colorPrimary">@color/colorHead</item>
        <item name="colorPrimaryVariant">@color/colorBody</item>
        <item name="colorPrimaryDark">@color/colorHeadDark</item>

        <item name="colorSecondary">@color/colorApple</item>
        <item name="colorOnSecondary">#000000</item>

        <item name="colorSurface">#eeeeee</item>

        <item name="fontFamily">@font/overpass_mono</item>
        <item name="android:fontFamily">@font/overpass_mono</item>

        <item name="shapeAppearanceSmallComponent">@style/SnekShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/SnekShapeAppearance.MediumComponent</item>

        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LightHeadline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="color">@color/colorApple</item>
    </style>
    
    <style name="DarkTheme" parent="Theme.MaterialComponents.NoActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/strongHead</item>
        <item name="colorPrimaryVariant">@color/strongBody</item>
        <item name="colorPrimaryDark">@color/strongPrimaryDark</item>

        <item name="colorSecondary">@color/strongApple</item>
        <item name="colorOnSecondary">#000000</item>

        <item name="colorSurface">#424242</item>

        <item name="fontFamily">@font/overpass_mono</item>
        <item name="android:fontFamily">@font/overpass_mono</item>

        <item name="textAppearanceHeadline1">@style/DarkHeadline1</item>
        <item name="shapeAppearanceSmallComponent">@style/SnekShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/SnekShapeAppearance.MediumComponent</item>
    </style>

    <style name="DarkHeadline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="color">@color/strongApple</item>
    </style>

    <style name="SnekShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

    <style name="SnekShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">36dp</item>
    </style>
</resources>
